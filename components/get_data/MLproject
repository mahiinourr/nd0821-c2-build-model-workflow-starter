name: download_file
conda_env: conda.yml

entry_points:
  main:
    parameters:

      sample:
        description: Name of sample to download
        type: str

      artifact_name:
        description: Name for the output artifact
        type: str

      artifact_type:
        description: Type of the output artifact. This will be used to categorize the artifact in the W&B
                     interface
        type: str

      artifact_description:
        description: A brief description of the output artifact
        type: str

    command: "python run.py -P sample="sample2.csv" -P artifact_name="data_to_be_cleaned" -P artifact_type="dataset" -P artifact_description="Initial preprocessed training dataset""

