name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:
      input_artifact:
        description: "The input artifact to clean"
        type: str
      output_artifact:
        description: "The name of the output artifact"
        type: str
      output_type:
        description: "The type of the output artifact"
        type: str
      output_description:
        description: "A description for the output artifact"
        type: str
    command: >
      python run.py --input_artifact {input_artifact} --output_artifact {output_artifact} --output_type {output_type} --output_description {output_description}
